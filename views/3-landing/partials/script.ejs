<script>
    function tarehe() {
        let trh_slip = document.getElementById('trh_slip')
        let d = new Date().toLocaleString('en-GB', {timeZone: 'Africa/Nairobi', weekday: 'long'})
        let s = new Date().toLocaleDateString('en-GB', {timeZone: 'Africa/Nairobi'})

        switch (d) {
            case 'Monday':
                trh_slip.innerText = 'Jumatatu: ' + s
                break;

            case 'Tuesday':
                trh_slip.innerText = 'Jumanne: ' + s
                break;

            case 'Wednesday':
                trh_slip.innerText = 'Jumatano: ' + s
                break;

            case 'Thursday':
                trh_slip.innerText = 'Alhamis: ' + s
                break;

            case 'Friday':
                trh_slip.innerText = 'Ijumaa: ' + s
                break;

            case 'Saturday':
                trh_slip.innerText = 'Jumamosi: ' + s
                break;

            case 'Sunday':
                trh_slip.innerText = 'Jumapili: ' + s
                break;

            default:
                trh_slip.innerText = 'ðŸ˜©'
                break;
        }
    }
    tarehe()
</script>