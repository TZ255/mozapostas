<!-- today -->
<div class="tble-cont" id="lday">
    <div class="table-head">
        <h2>
            <span style="display: block;">⭐⭐ MixBet Tips de Hoje ⭐⭐</span>
            <span class="spn_trh"><b><%= jumasiku.leo %>: </b><%= trh.leo %></span>
        </h2>
    </div>
    <table class="table table-dark table-striped-columns">
        <thead>
            <tr>
                <th scope="col">Hora</th>
                <th scope="col">Jogos</th>
                <th class="tips-th" scope="col">Tips</th>
            </tr>
        </thead>
        <tbody>
            <% stips.forEach(el=> { %>
            <tr itemscope>
                <td class=" time-td">
                    <time>
                        <%= el.time %> <br> <span><%= el.siku %></span>
                    </time>
                </td>
                <td class="match-td">
                    <span class="league"><%= el.league %></span>
                    <br>
                    <span class="home">
                        <%= el.match.split(' - ')[0] %>
                    </span>
                    <br>
                    <span class="away">
                        <%= el.match.split(' - ')[1] %>
                    </span>
                </td>
                <th class="tip-td" style="color: gold;"><%= el.tip %></th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% if (stips.length === 0) { %>
        <div class="zakesho">
            * MixBet Tips de hoje em preparação. Deslize para baixo para tips disponíveis.
        </div>
        <% } %>
    <% if (stips.length > 0) { %>
    <%- include('../../0-global/aff.ejs'); %>
    <% } %>
</div>


