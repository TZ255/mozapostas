<div class="toggle-cont" id="supa-de-hoje">
    <div class="toggles">
        <div class="jtoggle" id="jtoggle">« Anteontem</div>
        <div class="ytoggle" id="ytoggle">Ontem</div>
        <div class="ltoggle active_toggle" id="ltoggle">⁕ Hoje ⁕</div>
        <div class="ktoggle" id="ktoggle">Amanhã »</div>
    </div>
</div>

<!-- juzi -->
<div class="tble-cont ficha" id="jday" style="display: none;">
    <div class="table-head">
        <h2>
            <span style="display: block;">⭐⭐ MixBet Tips de Anteontem ⭐⭐</span>
            <span class="spn_trh"><b><%= jumasiku.juzi %>: </b><%= trh.juzi %></span>
        </h2>
    </div>
    <table class="table table-dark table-striped-columns">
        <thead>
            <tr>
                <th scope="col">Hora</th>
                <th scope="col">Jogos</th>
                <th class="tips-th" scope="col">Tips</th>
            </tr>
        </thead>
        <tbody>
            <% jtips.forEach(el=> { %>
            <tr>
                <td class="time-td">
                    <%= el.time %> <br> <span><%= el.siku %></span>
                </td>
                <td class="match-td">
                    <span class="league"><%= el.league %></span> <br>
                    <%- el.match.replace(/ - /g, '<br>' ) %>
                </td>
                <th class="tip-td" style="color: gold;"><%= el.tip %></th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% if (jtips.length > 0) { %>
    <%- include('../../0-global/aff.ejs'); %>
    <% } %>
</div>

